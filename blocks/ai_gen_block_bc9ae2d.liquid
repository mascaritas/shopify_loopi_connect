{% doc %}
  @prompt
    Ich möchte eine "so funktioniert es" sektion erstellen mit nummerierung
    
    1. Betrag per TWINT oder IBAN einzahlen (ab CHF 900 gibt es CHF 100 Mehrwert dazu )
    2. Adresse und email bei Zahlung angeben
    3. loopi sendet die Geschenkkarte physisch oder Digital mit einem einmaligen CODE zu
    4. Gutschein Verschenken
    5. Die beschenkten können online oder im Loopi Lokal die Produkte ihrer Wahl beziehen, make the number of tiles variable so I can add or remove them
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-how-it-works-{{ ai_gen_id }} {
    padding: {{ block.settings.padding_top }}px 20px {{ block.settings.padding_bottom }}px;
    background-color: {{ block.settings.background_color }};
  }

  .ai-how-it-works-container-{{ ai_gen_id }} {
    max-width: {{ block.settings.container_width }}px;
    margin: 0 auto;
  }

  .ai-how-it-works-heading-{{ ai_gen_id }} {
    text-align: {{ block.settings.heading_alignment }};
    color: {{ block.settings.heading_color }};
    font-size: {{ block.settings.heading_size }}px;
    margin: 0 0 {{ block.settings.heading_spacing }}px;
  }

  .ai-how-it-works-steps-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: {{ block.settings.step_spacing }}px;
    margin-top: {{ block.settings.steps_top_spacing }}px;
  }

  .ai-how-it-works-step-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    gap: {{ block.settings.step_content_spacing }}px;
    padding: {{ block.settings.step_padding }}px;
    background-color: {{ block.settings.step_background_color }};
    border-radius: {{ block.settings.step_border_radius }}px;
    border: {{ block.settings.step_border_width }}px solid {{ block.settings.step_border_color }};
  }

  .ai-how-it-works-step-number-{{ ai_gen_id }} {
    width: {{ block.settings.number_size }}px;
    height: {{ block.settings.number_size }}px;
    border-radius: 50%;
    background-color: {{ block.settings.number_background_color }};
    color: {{ block.settings.number_text_color }};
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: {{ block.settings.number_font_size }}px;
    font-weight: 700;
    flex-shrink: 0;
  }

  .ai-how-it-works-step-title-{{ ai_gen_id }} {
    color: {{ block.settings.step_title_color }};
    font-size: {{ block.settings.step_title_size }}px;
    font-weight: 600;
    margin: 0;
  }

  .ai-how-it-works-step-description-{{ ai_gen_id }} {
    color: {{ block.settings.step_description_color }};
    font-size: {{ block.settings.step_description_size }}px;
    line-height: 1.5;
    margin: 0;
  }

  @media screen and (max-width: 749px) {
    .ai-how-it-works-steps-{{ ai_gen_id }} {
      grid-template-columns: 1fr;
    }

    .ai-how-it-works-heading-{{ ai_gen_id }} {
      font-size: calc({{ block.settings.heading_size }}px * 0.8);
    }
  }
{% endstyle %}

<div class="ai-how-it-works-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-how-it-works-container-{{ ai_gen_id }}">
    {% if block.settings.heading != blank %}
      <h2 class="ai-how-it-works-heading-{{ ai_gen_id }}">{{ block.settings.heading }}</h2>
    {% endif %}

    <div class="ai-how-it-works-steps-{{ ai_gen_id }}">
      {% assign step_count = 0 %}
      {% for i in (1..10) %}
        {% liquid
          assign title_key = 'step_' | append: i | append: '_title'
          assign description_key = 'step_' | append: i | append: '_description'
          assign title = block.settings[title_key]
          assign description = block.settings[description_key]
        %}
        
        {% if title != blank %}
          {% assign step_count = step_count | plus: 1 %}
          <div class="ai-how-it-works-step-{{ ai_gen_id }}">
            <div class="ai-how-it-works-step-number-{{ ai_gen_id }}">{{ step_count }}</div>
            <h3 class="ai-how-it-works-step-title-{{ ai_gen_id }}">{{ title }}</h3>
            {% if description != blank %}
              <p class="ai-how-it-works-step-description-{{ ai_gen_id }}">{{ description }}</p>
            {% endif %}
          </div>
        {% endif %}
      {% endfor %}
    </div>
  </div>
</div>

