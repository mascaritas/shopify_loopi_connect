<script>
  (function() {
    class ProductConfigurator{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
        this.currentQuestion = 1;
        this.answers = {};
      }

      connectedCallback() {
        this.setupEventListeners();
      }

      setupEventListeners() {
        const questions = this.querySelectorAll('[data-question]');
        questions.forEach(question => {
          const options = question.querySelectorAll('[data-choice]');
          options.forEach(option => {
            option.addEventListener('click', () => {
              const questionNum = parseInt(question.dataset.question);
              const choice = option.dataset.choice;
              this.handleAnswer(questionNum, choice);
            });
          });
        });

        const backButtons = this.querySelectorAll('.ai-configurator-back-button-{{ ai_gen_id }}');
        backButtons.forEach(button => {
          button.addEventListener('click', () => {
            this.reset();
          });
        });
      }

      handleAnswer(questionNum, choice) {
        this.answers[questionNum] = choice;

        if (questionNum === 1) {
          this.showQuestion(2);
        } else if (questionNum === 2) {
          this.showResult();
        }
      }

      showQuestion(questionNum) {
        const questions = this.querySelectorAll('[data-question]');
        questions.forEach(q => {
          q.classList.add('ai-configurator-hidden-{{ ai_gen_id }}');
        });

        const targetQuestion = this.querySelector('[data-question="' + questionNum + '"]');
        if (targetQuestion) {
          targetQuestion.classList.remove('ai-configurator-hidden-{{ ai_gen_id }}');
        }

        this.currentQuestion = questionNum;
      }

      showResult() {
        const questions = this.querySelectorAll('[data-question]');
        questions.forEach(q => {
          q.classList.add('ai-configurator-hidden-{{ ai_gen_id }}');
        });

        const resultKey = this.answers[1] + '-' + this.answers[2];
        const results = this.querySelectorAll('[data-result]');
        results.forEach(result => {
          result.classList.remove('active');
        });

        const targetResult = this.querySelector('[data-result="' + resultKey + '"]');
        if (targetResult) {
          targetResult.classList.add('active');
        }
      }

      reset() {
        this.answers = {};
        this.currentQuestion = 1;

        const results = this.querySelectorAll('[data-result]');
        results.forEach(result => {
          result.classList.remove('active');
        });

        const questions = this.querySelectorAll('[data-question]');
        questions.forEach(q => {
          q.classList.add('ai-configurator-hidden-{{ ai_gen_id }}');
        });

